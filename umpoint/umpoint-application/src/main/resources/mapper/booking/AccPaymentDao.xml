<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="my.edu.um.umpoint.modules.booking.dao.AccPaymentDao">

    <resultMap type="my.edu.um.umpoint.modules.booking.entity.AccPaymentEntity" id="accPaymentMap">
        <id property="id" column="id"/>
        <result property="status" column="status"/>
        <result property="bookingId" column="booking_id"/>
        <result property="methodId" column="method_id"/>
        <result property="amount" column="amount"/>
        <result property="date" column="date"/>
    </resultMap>

    <resultMap type="my.edu.um.umpoint.modules.booking.entity.AccPaymentEntity" id="accPaymentSelectMap">
        <id property="id" column="id"/>
        <result property="status" column="status"/>
        <result property="bookingId" column="booking_id"/>
        <result property="methodId" column="method_id"/>
        <result property="amount" column="amount"/>
        <result property="date" column="date"/>
        <result property="method" column="method"/>
    </resultMap>

    <select id="getList" resultMap="accPaymentSelectMap">
        SELECT
            p.id,
            p.status,
            p.booking_id,
            p.method_id,
            p.amount,
            p.date,
            pm.method
        FROM acc_payment p
        LEFT JOIN payment_method pm ON p.method_id = pm.id
        <where>
            <if test="status != null">
                AND p.status = #{status}
            </if>
            <if test="method != null">
                AND pm.method = #{method}
            </if>
        </where>
        <if test="orderField != null and orderField.trim() != ''">
            ORDER BY
            <if test="orderField == 'id'">
                id
            </if>
            <if test="orderField == 'amount'">
                amount
            </if>
            <if test="orderField == 'date'">
                date
            </if>
            <if test="order != 'desc'">
                ASC
            </if>
            <if test="order == 'desc'">
                DESC
            </if>
        </if>
    </select>
    <select id="selectById" resultMap="accPaymentSelectMap">
        SELECT
            p.id,
            p.status,
            p.booking_id,
            p.method_id,
            p.amount,
            p.date,
            pm.method
        FROM acc_payment p
        LEFT JOIN payment_method pm ON p.method_id = pm.id
        WHERE p.id = #{id}
    </select>
</mapper>