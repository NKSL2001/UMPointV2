<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="my.edu.um.umpoint.modules.booking.dao.AccBookingDao">

    <resultMap type="my.edu.um.umpoint.modules.booking.entity.AccBookingEntity" id="accBookingMap">
        <id property="id" column="id"/>
        <result property="status" column="status"/>
        <result property="accommodationId" column="accommodation_id"/>
        <result property="adminId" column="admin_id"/>
        <result property="userId" column="user_id"/>
        <result property="workerId" column="worker_id"/>
        <result property="paymentId" column="payment_id"/>
        <result property="paymentAmount" column="payment_amount"/>
        <result property="startDay" column="start_day"/>
        <result property="endDay" column="end_day"/>
        <result property="createDate" column="create_date"/>
        <result property="updateDate" column="update_date"/>
    </resultMap>

    <resultMap type="my.edu.um.umpoint.modules.booking.entity.AccBookingEntity" id="accBookingSelectMap">
        <id property="id" column="id"/>
        <result property="status" column="status"/>
        <result property="accommodationId" column="accommodation_id"/>
        <result property="adminId" column="admin_id"/>
        <result property="userId" column="user_id"/>
        <result property="workerId" column="worker_id"/>
        <result property="paymentId" column="payment_id"/>
        <result property="paymentAmount" column="payment_amount"/>
        <result property="startDay" column="start_day"/>
        <result property="endDay" column="end_day"/>
        <result property="createDate" column="create_date"/>
        <result property="updateDate" column="update_date"/>
        <result property="accommodation" column="accommodation"/>
        <result property="admin" column="admin"/>
        <result property="username" column="username"/>
        <result property="worker" column="worker"/>
        <result property="paymentStatus" column="payment_status"/>
    </resultMap>
    
    <select id="getList" resultMap="accBookingSelectMap">
        SELECT
            ab.id,
            ab.status,
            ab.space_id,
            ab.admin_id,
            ab.user_id,
            ab.worker_id,
            ab.payment_id,
            ab.payment_amount,
            ab.start_day,
            ab.end_day,
            ab.create_date,
            ab.update_date,
            a.name AS accommodation,
            ad.username AS admin,
            c.username AS username,
            w.username AS worker,
            p.status AS payment_status
        FROM acc_booking ab
        LEFT JOIN acc_accommodation a ON ab.space_id = a.id
        LEFT JOIN sys_user ad ON ab.admin_id = ad.id
        LEFT JOIN cli_user c ON ab.user_id = c.id
        LEFT JOIN sys_user w ON ab.worker_id = w.id
        LEFT JOIN payment p ON ab.payment_id = p.id
        <where>
            <if test="id != null">
                AND ab.id = #{id}
            </if>
            <if test="status != null">
                AND ab.status = #{status}
            </if>
            <if test="accommodation != null and accommodation.trim() != ''">
                AND accommodation LIKE #{accommodation}
            </if>
        </where>
        <if test="orderField != null and orderField.trim() != ''">
            ORDER BY
            <if test="orderField == 'id'">
                id
            </if>
            <if test="orderField == 'accommodation'">
                accommodation
            </if>
            <if test="orderField == 'create_date'">
                create_date
            </if>
            <if test="order != 'desc'">
                ASC
            </if>
            <if test="order == 'desc'">
                DESC
            </if>
        </if>
    </select>
    <select id="selectById" resultMap="accBookingSelectMap">
        SELECT
            sb.id,
            sb.status,
            sb.space_id,
            sb.admin_id,
            sb.user_id,
            sb.worker_id,
            sb.payment_id,
            sb.payment_amount,
            sb.start_day,
            sb.end_day,
            sb.start_time,
            sb.end_time,
            sb.create_date,
            sb.update_date,
            s.name AS space,
            a.username AS admin,
            c.username AS username,
            w.username AS worker,
            p.status AS payment_status
        FROM spc_booking sb
        LEFT JOIN spc_space s ON sb.space_id = s.id
        LEFT JOIN sys_user a ON sb.admin_id = a.id
        LEFT JOIN cli_user c ON sb.user_id = c.id
        LEFT JOIN sys_user w ON sb.worker_id = w.id
        LEFT JOIN payment p ON ab.payment_id = p.id
        WHERE sb.id = #{id}
    </select>
</mapper>