<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="my.edu.um.umpoint.modules.space.dao.CategoryDao">

    <resultMap type="my.edu.um.umpoint.modules.space.entity.CategoryEntity" id="categoryMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>

    <select id="filterList" resultMap="categoryMap">
        SELECT DISTINCT
            ct.id,
            ct.name
        FROM spc_category ct
        RIGHT JOIN spc_space s ON ct.id = s.cat_id
    </select>

    <resultMap type="my.edu.um.umpoint.modules.space.entity.CategoryEntity" id="categoryMapWithCount">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="spaceCount" column="space_count"/>
    </resultMap>

    <select id="listWithCount" resultMap="categoryMapWithCount">
        SELECT DISTINCT
            ct.id,
            ct.name,
            COUNT(s.id) AS space_count
        FROM spc_category ct
        LEFT JOIN spc_space s ON ct.id = s.cat_id
        <where>
            <if test="name != null and name.trim() != ''">
                and ct.name like #{name}
            </if>
        </where>
        GROUP BY ct.id
    </select>

</mapper>