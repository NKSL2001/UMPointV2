<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="my.edu.um.umpoint.modules.space.dao.SpcBookingDao">

    <resultMap type="my.edu.um.umpoint.modules.space.entity.SpcBookingEntity" id="spcBookingMap">
        <id property="id" column="id"/>
        <result property="status" column="status"/>
        <result property="spaceId" column="space_id"/>
        <result property="adminId" column="admin_id"/>
        <result property="userId" column="user_id"/>
        <result property="workerId" column="worker_id"/>
        <result property="paymentAmount" column="payment_amount"/>
        <result property="event" column="event"/>
        <result property="startDay" column="start_day"/>
        <result property="endDay" column="end_day"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="createDate" column="create_date"/>
        <result property="updateDate" column="update_date"/>
    </resultMap>

    <resultMap type="my.edu.um.umpoint.modules.space.entity.SpcBookingEntity" id="spcBookingSelectMap">
        <id property="id" column="id"/>
        <result property="status" column="status"/>
        <result property="spaceId" column="space_id"/>
        <result property="adminId" column="admin_id"/>
        <result property="userId" column="user_id"/>
        <result property="workerId" column="worker_id"/>
        <result property="paymentAmount" column="payment_amount"/>
        <result property="event" column="event"/>
        <result property="startDay" column="start_day"/>
        <result property="endDay" column="end_day"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="createDate" column="create_date"/>
        <result property="updateDate" column="update_date"/>
        <result property="space" column="space"/>
        <result property="admin" column="admin"/>
        <result property="username" column="username"/>
        <result property="worker" column="worker"/>
        <collection property="spcPaymentEntityList" javaType="java.util.List" ofType="my.edu.um.umpoint.modules.payment.entity.SpcPaymentEntity">
            <id property="id" column="payment_id"/>
            <result property="status" column="payment_status"/>
            <result property="bookingId" column="booking_id"/>
            <result property="methodId" column="method_id"/>
            <result property="amount" column="amount"/>
            <result property="date" column="date"/>
            <result property="method" column="method"/>
        </collection>
    </resultMap>

    <select id="getList" resultMap="spcBookingSelectMap">
        SELECT 
            sb.id,
            sb.status,
            sb.space_id,
            sb.admin_id,
            sb.user_id,
            sb.worker_id,
            sb.payment_amount,
            sb.event,
            sb.start_day,
            sb.end_day,
            sb.start_time,
            sb.end_time,
            sb.create_date,
            sb.update_date,
            s.name AS space,
            a.username AS admin,
            c.username AS username,
            w.username AS worker,
            p.id AS payment_id,
            p.status AS payment_status,
            p.booking_id,
            p.method_id,
            p.amount,
            p.date,
            pm.method
        FROM spc_booking sb
        LEFT JOIN spc_space s ON sb.space_id = s.id
        LEFT JOIN sys_user a ON sb.admin_id = a.id
        LEFT JOIN cli_user c ON sb.user_id = c.id
        LEFT JOIN sys_user w ON sb.worker_id = w.id
        LEFT JOIN spc_payment p ON sb.id = p.booking_id
        LEFT JOIN payment_method pm ON p.method_id = pm.id
        <where>
            <if test="id != null">
                AND sb.id = #{id}
            </if>
            <if test="status != null">
                AND sb.status = #{status}
            </if>
            <if test="event != null and event.trim() != ''">
                AND event LIKE #{event}
            </if>
        </where>
        <if test="orderField != null and orderField.trim() != ''">
            ORDER BY
            <if test="orderField == 'id'">
                sb.id
            </if>
            <if test="orderField == 'space'">
                sb.space
            </if>
            <if test="orderField == 'create_date'">
                sb.create_date
            </if>
            <if test="order != 'desc'">
                ASC
            </if>
            <if test="order == 'desc'">
                DESC
            </if>
        </if>
    </select>
    <select id="selectById" resultMap="spcBookingSelectMap">
        SELECT
            sb.id,
            sb.status,
            sb.space_id,
            sb.admin_id,
            sb.user_id,
            sb.worker_id,
            sb.payment_amount,
            sb.event,
            sb.start_day,
            sb.end_day,
            sb.start_time,
            sb.end_time,
            sb.create_date,
            sb.update_date,
            s.name AS space,
            a.username AS admin,
            c.username AS username,
            w.username AS worker,
            p.id AS payment_id,
            p.status AS payment_status,
            p.booking_id,
            p.method_id,
            p.amount,
            p.date,
            pm.method
        FROM spc_booking sb
        LEFT JOIN spc_space s ON sb.space_id = s.id
        LEFT JOIN sys_user a ON sb.admin_id = a.id
        LEFT JOIN cli_user c ON sb.user_id = c.id
        LEFT JOIN sys_user w ON sb.worker_id = w.id
        LEFT JOIN spc_payment p ON sb.id = p.booking_id
        LEFT JOIN payment_method pm ON p.method_id = pm.id
        WHERE sb.id = #{id}
    </select>
</mapper>