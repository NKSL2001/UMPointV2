<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatiorg//DTD Mapper 3.0//EN" "http://mybatiorg/dtd/mybatis-3-mapper.dtd">

<mapper namespace="my.edu.um.umpoint.modulespace.dao.SpaceDao">

    <resultMap type="my.edu.um.umpoint.modulespace.entity.SpaceEntity" id="spaceMap">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="catId" column="cat_id"/>
        <result property="deptId" column="dept_id"/>
        <result property="address" column="address"/>
        <result property="description" column="description"/>
        <result property="facilities" column="facilities"/>
        <result property="capacity" column="capacity"/>
        <result property="manager" column="manager"/>
        <result property="bookingRuleId" column="booking_rule_id"/>
        <result property="creator" column="creator"/>
        <result property="createDate" column="create_date"/>
        <result property="updater" column="updater"/>
        <result property="updateDate" column="update_date"/>
    </resultMap>

    <resultMap type="my.edu.um.umpoint.modulespace.entity.SpaceEntity" id="spaceSelectMap">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="catId" column="cat_id"/>
        <result property="deptId" column="dept_id"/>
        <result property="address" column="address"/>
        <result property="description" column="description"/>
        <result property="facilities" column="facilities"/>
        <result property="capacity" column="capacity"/>
        <result property="manager" column="manager"/>
        <result property="bookingRuleId" column="booking_rule_id"/>
        <result property="creator" column="creator"/>
        <result property="createDate" column="create_date"/>
        <result property="updater" column="updater"/>
        <result property="updateDate" column="update_date"/>
        <result column="category" property="category" />
        <result column="dept_name" property="deptName" />
        <result column="manager_name" property="managerName" />
        <result column="creator_name" property="creatorName" />
        <result column="updater_name" property="updaterName" />
        <association property="bookingRuleEntity">
            <id property="id" column="booking_rule_id"/>
            <result property="hourPrice" column="hour_price"/>
            <result property="fourHoursPrice" column="four_hours_price"/>
            <result property="dayPrice" column="day_price"/>
            <result property="openDaysBeforeEvent" column="open_days_before_event"/>
            <result property="closeDaysBeforeEvent" column="close_days_before_event"/>
            <result property="maxReservationDays" column="max_reservation_days"/>
            <result property="approvalRequired" column="approval_required"/>
            <result property="minBookingHours" column="min_booking_hours"/>
        </association>
        <collection property="imageEntityList" ofType="my.edu.um.umpoint.modulespace.entity.ImageEntity">
            <id property="id" column="image_id"/>
            <result property="spaceId" column="id"/>
            <result property="imageUrl" column="image_url"/>
        </collection>
        <collection property="tagEntityList" ofType="my.edu.um.umpoint.modulespace.entity.TagEntity">
            <id property="id" column="tag_id"/>
            <result column="tag_name" property="tagName"/>
        </collection>
    </resultMap>

    <select id="getList" resultMap="spaceSelectMap">
        SELECT
            id,
            name,
            cat_id,
            dept_id,
            address,
            description,
            facilities,
            capacity,
            manager,
            booking_rule_id,
            creator,
            create_date,
            updater,
            update_date,
            c.name AS category,
            d.name AS dept_name,
            m.username AS manager_name,
            cr.username AS creator_name,
            u.username AS updater_name,
            b.id AS booking_rule_id,
            b.hour_price,
            b.four_hours_price,
            b.day_price,
            b.open_days_before_event,
            b.close_days_before_event,
            b.max_reservation_days,
            b.approval_required,
            b.min_booking_hours,
            i.id AS image_id,
            i.image_url,
            t.id AS tag_id,
            t.tag_name
        FROM spc_space
        LEFT JOIN spc_category c ON cat_id = c.id
        LEFT JOIN sys_dept d ON dept_id = d.id
        LEFT JOIN spc_image i ON id = i.space_id
        LEFT JOIN spc_booking_rule b ON booking_rule_id = b.id
        LEFT JOIN spc_space_tag st ON id = st.space_id
        LEFT JOIN spc_tag t ON st.tag_id = t.id
        LEFT JOIN sys_user m ON manager = m.id
        LEFT JOIN sys_user cr ON creator = cr.id
        LEFT JOIN sys_user u ON updater = u.id
        <where>
            <if test="name != null and name.trim() != ''">
                and t1.username like #{name}
            </if>
            <if test="catId != null">
                AND cat_id = #{catId}
            </if>
            <if test="tagId != null">
                AND st.tag_id = #{tagId}
            </if>
            <if test="deptIdList != null">
                AND dept_id IN
                <foreach item="id" collection="deptIdList" open="(" separator="," close=")">
                    #{id}
                </foreach>
            </if>
        </where>
    </select>
    <select id="selectById" resultMap="spaceSelectMap">
        SELECT
            id,
            name,
            cat_id,
            dept_id,
            address,
            description,
            facilities,
            capacity,
            manager,
            booking_rule_id,
            creator,
            create_date,
            updater,
            update_date,
            c.name AS category,
            d.name AS dept_name,
            m.username AS manager_name,
            cr.username AS creator_name,
            u.username AS updater_name,
            b.id AS booking_rule_id,
            b.hour_price,
            b.four_hours_price,
            b.day_price,
            b.open_days_before_event,
            b.close_days_before_event,
            b.max_reservation_days,
            b.approval_required,
            b.min_booking_hours,
            i.id AS image_id,
            i.image_url,
            t.id AS tag_id,
            t.tag_name
        FROM spc_space s
        LEFT JOIN spc_category c ON cat_id = c.id
        LEFT JOIN sys_dept d ON dept_id = d.id
        LEFT JOIN spc_image i ON id = i.space_id
        LEFT JOIN spc_booking_rule b ON booking_rule_id = b.id
        LEFT JOIN spc_space_tag st ON id = st.space_id
        LEFT JOIN spc_tag t ON st.tag_id = t.id
        LEFT JOIN sys_user m ON manager = m.id
        LEFT JOIN sys_user cr ON creator = cr.id
        LEFT JOIN sys_user u ON updater = u.id
        WHERE id = #{id}
    </select>
</mapper>